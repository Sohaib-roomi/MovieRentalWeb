@model MovieRentalApp.Models.Customer


@{ ViewBag.Title = string.Format("{0} Details", Model.Name);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
 
 }

<div id="page-wrapper">
    <div class="main-page ">
        @Html.Partial("MessageAlert")

        <div class="sign-up-row widget-shadow">



            <h2>@Model.Name</h2>

            <ul>
                <li><strong>Email: </strong>@Model.Email</li>

                @if (Model.Birthdate.HasValue)
                {
    <li><strong>BirthDay: </strong>@Model.Birthdate.Value.ToShortDateString()</li>}

                <li><strong>Membership Type: </strong>@Model.MembershipType.Name</li>
                <li><strong>Discount: </strong>@Model.MembershipType.Discount%</li>
                <li><strong>Sign Up Fee: </strong>$@Model.MembershipType.SignUpFee</li>

            </ul>

            <img alt="Uploaded Image" width="250" height="250" src="~/Images/CustomerPics/@Model.ImageURL" />

            <div class="form-group">
                @Html.ActionLink("Back To List", "Index")
            </div>



        </div>
    </div>
</div>